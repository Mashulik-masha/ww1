# 3
import numpy as np

# Создаем два случайных массива длиной 10 со случайными целыми числами от 1 до 10
# size=10 - длина массива
a = np.random.randint(1, 11, size=10)
b = np.random.randint(1, 11, size=10)

# Поэлементное умножение
umn = a * b

# Среднее значение полученного массива
# Mean в Python — это среднее значение набора числовых значений.
sr = np.mean(umn)

# Вывод результатов
print("Массив a:", a)
print("Массив b:", b)
print("Поэлементное умножение (a * b):", umn)
print("Среднее значение результата:", sr)
