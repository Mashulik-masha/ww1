# Создаем массив чисел от 1 до 30
arr = list(range(1, 31))

# Извлекаем элементы, кратные 3
m = [num for num in arr if num % 3 == 0]

# Выводим результат
print("Массив:", arr)
print("Элементы, кратные 3:", m)

